<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <br><br>
    <h3>Create a New Listing</h3>
    <form method="post" class="needs-validation" action="/listings" novalidate enctype="multipart/form-data">
        
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" required type="text" class="form-control">

            <div class="valid-feedback">
                Looks good!
              </div> 
        </div>
        



       
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="enter description " required class="form-control"></textarea>
            <div class="invalid-feedback">
                Please write short description.
              </div>

        </div>
        

        <!-- <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input name="listing[image]" placeholder="enter image URL/Link" class="form-control" type="text">
        </div> -->

        <div class="mb-3">
            <label for="image" class="form-label">Upload Listing Image</label>
            <input name="listing[image]" class="form-control" type="file">
            required
        </div>
        
        

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input name="listing[price]" placeholder="1200" required class="form-control" type="number">
                <div class="invalid-feedback">
                    Please write price.
                  </div>
            </div>
    
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input name="listing[country]" placeholder="India" required class="form-control"  type="text">
                <div class="invalid-feedback">
                    Please write country name.
                  </div>
            </div>

        </div>

        
       

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" required placeholder="Uttar Pradesh" class="form-control" type="text">
            <div class="invalid-feedback">
                Please write location .
              </div>
        </div>


        <button class="btn btn-dark add-btn">Add</button>
        <br><br>

    </form>
</div>
</div>